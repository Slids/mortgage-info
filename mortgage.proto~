syntax = "proto2";

package mortgage_forms;

message amortization_line {
  optional int32 period = 0;
  optional double interest_charged = 1;
  optional double repayment_made = 2;
  optional double payment_toward_principal = 3;
  optional double outstanding_principal = 4;
}

message mortgage_information {
  repeated amortization_line repayment_information = 0;
  optional double total_interest = 1;
  optional double total_paid = 2;
  optional double periodic_payment = 3;
}
